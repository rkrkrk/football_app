<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutStarttm"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView00"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/managepanel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1.02"
                android:background="@android:drawable/btn_default"
                android:minHeight="0dp"
                android:text="manage panel"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/training"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_weight="1.05"
                android:background="@android:drawable/btn_default"
                android:minHeight="0dp"
                android:text="manage attendance"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/resetdata"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight=".98"
                android:background="@android:drawable/btn_default"
                android:minHeight="0dp"
                android:text="start new match"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/match"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight=".98"
                android:background="@android:drawable/btn_default"
                android:minHeight="0dp"
                android:text="continue existing match"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_weight="1.05"
                android:background="@android:drawable/btn_default"
                android:minHeight="0dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="save / email match data"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/customStats"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_weight="1.05"
                android:background="@android:drawable/btn_default"
                android:minHeight="0dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="setup"
                android:textSize="16sp"
                android:textStyle="bold" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1.07"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/sHelp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_weight="1.05"
        android:background="@android:drawable/btn_default"
        android:minHeight="0dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="help / info"
        android:textSize="16sp"
        android:textStyle="bold" />

            <Button
                android:id="@+id/quit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1.04"
                android:background="@android:drawable/btn_default"
                android:minHeight="0dp"
                android:text="quit"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout></LinearLayout>
    </ScrollView>

</LinearLayout>